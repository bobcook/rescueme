<p id="notice"><%= notice %></p>
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Kpi Notifications
                <small>complete list</small>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
          <table class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Value</th>
                <th>Description</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @kpi_notifications.each do |kpi_notification| %>
                <tr>
                  <td><%= kpi_notification.title %></td>
                  <td><%= kpi_notification.value %></td>
                  <td><%= kpi_notification.description %></td>
                  <td><%= link_to 'Show', kpi_notification, :class => 'btn btn-sm btn-primary' %></td>
                  <td><%= link_to 'Edit', edit_kpi_notification_path(kpi_notification), :class => 'btn btn-sm btn-success' %></td>
                  <td><%= link_to 'Destroy', kpi_notification, :class => 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
<br>

<%= link_to 'New Kpi notification', new_kpi_notification_path, :class => 'btn btn-sm btn-primary' %>
