<p id="notice"><%= notice %></p>

<h1>Listing Community Messages</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @community_messages.each do |community_message| %>
      <tr>
        <td><%= community_message.subject %></td>
        <td><%= community_message.body %></td>
        <td><%= community_message.start_date %></td>
        <td><%= community_message.end_date %></td>
        <td><%= link_to 'Show', community_message %></td>
        <td><%= link_to 'Edit', edit_community_message_path(community_message) %></td>
        <td><%= link_to 'Destroy', community_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

