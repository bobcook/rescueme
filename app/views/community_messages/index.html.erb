<p id="notice"><%= notice %></p>
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Community Messages
                <small>complete list</small>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
          <table class="table">
            <thead>
              <tr>
                <th>Subject</th>
                <th>Body</th>
                <th>Start date</th>
                <th>End date</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @community_messages.each do |community_message| %>
                <tr>
                  <td><%= community_message.subject %></td>
                  <td><%= community_message.body %></td>
                  <td><%= community_message.start_date %></td>
                  <td><%= community_message.end_date %></td>
                  <td><%= link_to 'Show', community_message, :class => 'btn btn-sm btn-primary' %></td>
                  <td><%= link_to 'Edit', edit_community_message_path(community_message), :class => 'btn btn-sm btn-success' %></td>
                  <td><%= link_to 'Destroy', community_message, :class => 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

<br>

<%= link_to 'New Community message', new_community_message_path, :class => 'btn btn-sm btn-primary' %>
